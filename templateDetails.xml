<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>easydayz</name>
	<version>1.0</version>
	<creationDate>4/30/2015</creationDate>
	<author>Andrea Rossi</author>
	<authorEmail>code@redsandev.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>TPL_EASYDAYZ_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>scss</folder>
	</files>
	<positions>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_easydayz.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_easydayz.sys.ini</language>
		<language tag="it-IT">en-GB/it-IT.tpl_easydayz.ini</language>
		<language tag="it-IT">en-GB/it-IT.tpl_easydayz.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logoFile" class="" type="media" default=""
					label="TPL_EASYDAYZ_LOGO_LABEL"
					description="TPL_EASYDAYZ_LOGO_DESC" />
						<field name="logoMobileFile" class="" type="media" default=""
							label="TPL_EASYDAYZ_LOGO_LABEL"
							description="TPL_EASYDAYZ_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_EASYDAYZ_FONT_LABEL"
					description="TPL_EASYDAYZ_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_EASYDAYZ_FONT_NAME_LABEL"
					description="TPL_EASYDAYZ_FONT_NAME_DESC" />
			</fieldset>
			<fieldset name="address">
                <field name="showmap"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="TPL_EASYDAYZ_SHOWMAP_LABEL"
                    description="TPL_EASYDAYZ_SHOWMAP_DESC"
                    >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
				<field name="street" type="text" default="" label="TPL_EASYDAYZ_ADDRESS_STREET_LABEL" description="TPL_EASYDAYZ_ADDRESS_STREET_DESCRIPTION" filter="string" />
				<field name="civicnumber" type="text" default="" label="TPL_EASYDAYZ_ADDRESS_CIVICNUMBER_LABEL" description="TPL_EASYDAYZ_ADDRESS_CIVICNUMBER_DESCRIPTION" filter="string" />
				<field name="city" type="text" default="" label="TPL_EASYDAYZ_ADDRESS_CITY_LABEL" description="TPL_EASYDAYZ_ADDRESS_CITY_DESCRIPTION" filter="string" />
				<field name="province" type="text" default="" label="TPL_EASYDAYZ_ADDRESS_PROVINCE_LABEL" description="TPL_EASYDAYZ_ADDRESS_PROVINCE_DESCRIPTION" filter="string" />
				<field name="state" type="text" default="" label="TPL_EASYDAYZ_ADDRESS_REGION_LABEL" description="TPL_EASYDAYZ_ADDRESS_REGION_DESCRIPTION" filter="string" />
                <field name="nation" type="text" default="" label="TPL_EASYDAYZ_ADDRESS_NATION_LABEL" description="TPL_EASYDAYZ_ADDRESS_NATION_DESCRIPTION" filter="string" />
			</fieldset>
			<fieldset name="officialcontact">
				<field name="email" type="text" default="" label="TPL_EASYDAYZ_OFFICIALCONTACT_EMAIL_LABEL" description="TPL_EASYDAYZ_OFFICIALCONTACT_EMAIL_DESCRIPTION" filter="string" />
				<field name="facebookpage" type="text" default="" label="TPL_EASYDAYZ_OFFICIALCONTACT_FACEBOOKPAGE_LABEL" description="TPL_EASYDAYZ_OFFICIALCONTACT_FACEBOOKPAGE_DESCRIPTION" filter="string" />
				<field name="twitter" type="text" default="" label="TPL_EASYDAYZ_OFFICIALCONTACT_TWITTER_LABEL" description="TPL_EASYDAYZ_OFFICIALCONTACT_TWITTER_DESCRIPTION" filter="string" />
				<field name="googlepluspage" type="text" default="" label="TPL_EASYDAYZ_OFFICIALCONTACT_EMAIL_LABEL" description="TPL_EASYDAYZ_OFFICIALCONTACT_GOOGLEPLUSPAGE_DESCRIPTION" filter="string" />
				<field name="telegramchannel" type="text" default="" label="TPL_EASYDAYZ_OFFICIALCONTACT_TELEGRAMCHANNEL_LABEL" description="TPL_EASYDAYZ_OFFICIALCONTACT_TELEGRAMCHANNEL_DESCRIPTION" filter="string" />
				<field name="youtube" type="text" default="" label="TPL_EASYDAYZ_OFFICIALCONTACT_YOUTUBE_LABEL" description="TPL_EASYDAYZ_OFFICIALCONTACT_YOUTUBE_DESCRIPTION" filter="string" />
				<field name="vimeo" type="text" default="" label="TPL_EASYDAYZ_OFFICIALCONTACT_VIMEO_LABEL" description="TPL_EASYDAYZ_OFFICIALCONTACT_VIMEO_DESCRIPTION" filter="string" />
			</fieldset>
		</fields>
	</config>
</extension>
